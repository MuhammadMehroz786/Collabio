# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/collabio_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=collabio_db
DB_USER=your_db_username
DB_PASSWORD=your_db_password

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour in seconds
JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30 days in seconds

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# File Upload Configuration
UPLOAD_FOLDER=./uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,doc,docx,mp4

# WebSocket Configuration
SOCKETIO_MESSAGE_QUEUE=redis://localhost:6379/0
SOCKETIO_CORS_ALLOWED_ORIGINS=*

# Email Configuration (for verification emails)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=noreply@collabio.com

# AI/ML Configuration (for matching algorithms)
AI_MATCHING_ENABLED=True
AI_API_KEY=your-ai-api-key-if-needed

# Redis Configuration (for caching and session management)
REDIS_URL=redis://localhost:6379/0
CACHE_TYPE=redis
CACHE_REDIS_URL=redis://localhost:6379/1

# Application Settings
APP_NAME=Collabio
APP_URL=http://localhost:5173
API_VERSION=v1
PAGINATION_DEFAULT_LIMIT=20
PAGINATION_MAX_LIMIT=100

# Security
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=True
PASSWORD_REQUIRE_LOWERCASE=True
PASSWORD_REQUIRE_NUMBERS=True
PASSWORD_REQUIRE_SPECIAL=True

# Rate Limiting
RATELIMIT_ENABLED=True
RATELIMIT_DEFAULT=100 per hour
RATELIMIT_STORAGE_URL=redis://localhost:6379/2

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/collabio.log
